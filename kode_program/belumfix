    printf("||                                                    ||\n");
    printf("|| ================================================== ||\n\n");
    char enter[2];
    printf("Tekan Enter untuk melanjutkan program!");
    scanf("%[^\n]", &enter);
    system("clear");
}

void menuUtama()
{
    int menu;
    printf("|| ==================================================== ||\n");
    printf("||                Menu Kelompok Pelanggan               ||\n");
    printf("|| ==================================================== ||\n");
    printf("|| 1. Non Niaga Bersubsidi                              ||\n");
    printf("|| 2. Non Niaga Tanpa Bersubsidi                        ||\n");
    printf("|| 3. Niaga                                             ||\n");
    printf("|| ==================================================== ||\n");
    printf("\n");
    printf("Pilihan Anda: ");
    scanf("%d", &menu);
    system("clear");

    switch (menu)
    {
    case 1:
        nonNiagaBersubsidi();
        break;
    case 2:
        nonNiagaTanpaBersubsidi();
        break;
    case 3:
        niaga();
        break;
    default:
        printf("|| ================================================== ||\n");
        printf("||       Maaf Input anda salah, Silahkan ulangi !     ||\n");
        printf("|| ================================================== ||\n");
        menuUtama();
        break;
    }
}

