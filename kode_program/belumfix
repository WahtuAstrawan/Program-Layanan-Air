int main()
{
    namaProgram();
    namaKelompok();
    menuUtama();
    return 0;
}

void namaProgram()
{
    char enter[2];
    printf("|| ================================================== ||\n");
    printf("||                    Program PDAM                    ||\n");
    printf("||               PT.Blangkon Sejahtera                ||\n");
    printf("|| ================================================== ||\n");
    printf("||       Tekan Enter untuk melanjutkan program!       ||\n");
    printf("|| ================================================== ||\n");
    scanf("%[^\n]", &enter);
    system("clear");
}

void namaKelompok()
{
