    printf("\n");
    printf("Pilihan Anda: ");
    scanf("%d", &menu);
    system("clear");

    switch (menu)
    {
    case 1:
        zz();
        break;
    case 2:
        bola();
        break;
    case 3:
        limasSegiempat();
        break;
    default:
        printf("|| ================================================== ||\n");
        printf("||       Maaf Input anda salah, Silahkan ulangi !     ||\n");
        printf("|| ================================================== ||\n");
        niaga();
        break;
    }
}

void totalBiayaD11()
{
    int pakaiAir, biaya;
    pakaiAir = pemakaianAir();
    if (pakaiAir <= 10)
    {
        biaya = 17800 + ADMIN_RT;
        printf("|| ================================================== ||\n");
        printf("|| Total biaya air anda adalah : Rp. %d               ||\n", biaya);
        printf("|| ================================================== ||\n");
    }
    else if (pakaiAir > 10 && pakaiAir <= 20)
    {
        biaya = pakaiAir * 2060 + ADMIN_RT;
        printf("|| ================================================== ||\n");
        printf("|| Total biaya air anda adalah : Rp. %d               ||\n", biaya);
        printf("|| ================================================== ||\n");
    }
    else if (pakaiAir > 20)
    {
        biaya = pakaiAir * 5880 + ADMIN_RT;
        printf("|| ================================================== ||\n");
        printf("|| Total biaya air anda adalah : Rp. %d               ||\n", biaya);
        printf("|| ================================================== ||\n");
    }
    else
    {
        printf("|| ================================================== ||\n");
        printf("||               Maaf Input anda salah !              ||\n");
        printf("|| ================================================== ||\n");
        totalBiayaD11();
    }
}

